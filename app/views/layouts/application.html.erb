<!DOCTYPE html>
<html>
  <head>
<!--  <title><%#= content_for?(:title) ? yield(:title) : "Untitled" %></title>  -->
    <title>Trufas - <%= controller_name.humanize %>  </title>

    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "jquery-ui-1.8.16.custom.css" %>
    <%#= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'jquery-1.4.2.min.js', 'jquery-ui-1.8.2.custom.min.js', 'autocomplete-rails.js', 'rails.js' %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <div id="menu">
      <ul>
         <%= render '/vendas/produtos_vendidos' if controller.controller_name == 'vendas' %>
      </ul>
      </div>
      <%#= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>

  </body>
</html>
