<h1>Listar Estoque</h1>

<%= link_to 'Novo Lancamento', new_estoque_path %> |
<%= link_to 'Estoque Diario ', diario_estoques_path %> |
<%= link_to 'Vendas  ', vendas_path %> 

<br />

<table>
  <tr>
    <th>Produto</th>
    <th>Qtde</th>
    <th>Data</th>
    <th></th>
    <th></th>
  </tr>

<% @estoques.each do |estoque| %>
  <tr>
    <td><%= estoque.produto.nome %></td>
    <td><%= estoque.qtde %></td>
    <td><%= format_data(estoque.created_at) %> </td>
    <td><%= link_to 'Exibir', estoque %></td>
    <td><%= link_to 'Editar', edit_estoque_path(estoque) %></td>
    <td><%= link_to 'Deletar', estoque, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


